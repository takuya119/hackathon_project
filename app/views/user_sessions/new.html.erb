<p>Find me in app/views/user_sessions/new.html.erb</p>

<%= form_with url: login_path do |f| %>
  <div class="form-group">
    <%= f.label :email, 'Eメール' %>
    <%= f.text_field :email, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :password, 'パスワード' %>
    <%= f.password_field :password, class: 'form-control' %>
  </div>
  <%= f.submit 'ログイン', class: 'btn btn-primary mt-3' %>
<% end %>
<div class="mt-3">
  <%= link_to '新規登録', signup_path %>
  <%= link_to 'パスワードをお忘れの方はこちら', new_password_reset_path %>
</div>


<%= turbo_frame_tag "#{comment_type}_form" do %>
  <%= form_with model: comment, url: url do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <%= f.hidden_field :comment_type, value: comment_type %>
    <div class="form-group">
      <%= f.label :name, '名前' %>
      <%= f.text_field :name, class: "form-control", placeholder: '空欄の場合、匿名のコメントになります' %>
    </div>
    <div class="form-group">
      <%= f.label :content, 'コメント' %>
      <%= f.text_area :content, class: "form-control mb-3" %>
    </div>
    <%= f.submit '送信', class: "btn btn-primary float-end" %>
  <% end %>
<% end %>

<% if current_user.participation?(event) %>
  <%= link_to 'イベントへの参加を取り消す', event_participation_path(event, event.participants.find_by(user_id: current_user.id)), class: 'mt-3 btn btn-primary', data: {turbo_method: :delete} %>
<% else %>
  <%= link_to 'イベントに参加する', event_participations_path(event), class: 'mt-3 btn btn-primary', data: {turbo_method: :post} %>
<% end %>

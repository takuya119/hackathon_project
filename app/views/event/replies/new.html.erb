<%= turbo_frame_tag @comment do %>
  <div class="card border-info mb-3">
    <div class="card-header border-info bg-light">
      <p class="d-inline mb-0"><%= @comment.name %></p>
      <p class="d-inline float-end mb-0"><%= @comment.created_at %></p>
    </div>
    <div class="card-body">
      <%= simple_format @comment.content, class: 'mb-0 card-text fs-5' %>
    </div>
    <div class="card-footer bg-transparent border-info">
      <%= render 'reply_form', { comment: @comment, reply: @reply } %>
    </div>
  </div>
<% end %>
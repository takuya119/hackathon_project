<%= turbo_frame_tag 'reply_form' do %>
  <%= form_with model: reply, url: comment_evt_replies_path(comment) do |f| %>
    <%#= render 'shared/error_messages', object: f.object %>
    <div class="form-group">
      <%= f.label :name, '名前' %>
      <%= f.text_field :name, class: "form-control", placeholder: '空欄の場合、匿名のコメントになります' %>
    </div>
    <div class="form-group">
      <%= f.label :content, 'コメント' %>
      <%= f.text_area :content, class: "form-control mb-3" %>
    </div>
    <div class="float-end">
      <%= link_to 'キャンセル', event_comment_path(comment.event, comment), data: { turbo_frame: "facility_comment_#{comment.id}" }, class: "btn btn-secondary" %>
      <%= f.submit '送信', class: "btn btn-primary ms-3 px-4" %>
    </div>
  <% end %>
<% end %>